{
    "family": "backend-task",
    "networkMode": "bridge",
    "containerDefinitions": [
        {
            "name": "app-backend-container",
            "image": "__ECR_IMAGE_URL__",
            "cpu": 256,
            "memory": 512,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 5050,
                    "hostPort": 5050,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "NODE_ENV",
                    "value": "production"
                }
            ],
            "secrets": [
                {
                    "name": "MONGO_URI",
                    "valueFrom": "__MONGO_URI_SECRET_ARN__"
                },
                {
                    "name": "JWT_SECRET",
                    "valueFrom": "__JWT_SECRET_ARN__"
                }
            ]
        }
    ],
    "requiresCompatibilities": [
        "EC2"
    ],
    "cpu": "256",
    "memory": "512",
    "executionRoleArn": "arn:aws:iam::881962383269:role/ecs-task-execution-role"
}